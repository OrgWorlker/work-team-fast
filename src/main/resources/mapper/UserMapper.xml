<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wtf.interfaces.repository.IUserMapper">
    <cache />
    <!--auto generated Code-->
    <resultMap id="AllColumnMap" type="com.wtf.domain.model.User">
        <result column="name" property="name"/>
        <result column="login_name" property="loginName"/>
        <result column="login_pwd" property="loginPwd"/>
        <result column="come_from" property="comeFrom"/>
        <result column="trade_pwd" property="tradePwd"/>
        <result column="id" property="id"/>
        <result column="upd_time" property="updTime"/>
        <result column="crt_time" property="crtTime"/>
        <association column="user_info_id" property="userInfo" javaType="UserInfo"  select="com.wtf.interfaces.repository.IUserInfoMapper.findById" />
        <association column="user_level_id" property="userLevel" javaType="UserLevel" select="com.wtf.interfaces.repository.IUserLevelMapper.findById" />
        <association column="payment_id" property="payment" javaType="Payment" select="com.wtf.interfaces.repository.IPaymentMapper.findById" />
    </resultMap>

    <!--auto generated Code-->
    <sql id="all_column">
        name,
        login_name,
        login_pwd,
        come_from,
        trade_pwd,
        id,
        upd_time,
        crt_time
    </sql>

    <!--auto generated Code-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="pojo.id">
        INSERT INTO user (
            name,
            login_name,
            login_pwd,
            come_from,
            trade_pwd,
            id,
            upd_time,
            crt_time
        ) VALUES (
            #{pojo.name},
            #{pojo.loginName},
            #{pojo.loginPwd},
            #{pojo.comeFrom},
            #{pojo.tradePwd},
            #{pojo.id},
            #{pojo.updTime},
            #{pojo.crtTime}
        )
    </insert>

    <!--auto generated Code-->
    <insert id="insertSelective" useGeneratedKeys="true" keyProperty="pojo.id">
        INSERT INTO user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="pojo.name!=null"> name,</if>
            <if test="pojo.loginName!=null"> login_name,</if>
            <if test="pojo.loginPwd!=null"> login_pwd,</if>
            <if test="pojo.comeFrom!=null"> come_from,</if>
            <if test="pojo.tradePwd!=null"> trade_pwd,</if>
            <if test="pojo.id!=null"> id,</if>
            <if test="pojo.updTime!=null"> upd_time,</if>
            <if test="pojo.crtTime!=null"> crt_time,</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="pojo.name!=null">#{pojo.name},</if>
            <if test="pojo.loginName!=null">#{pojo.loginName},</if>
            <if test="pojo.loginPwd!=null">#{pojo.loginPwd},</if>
            <if test="pojo.comeFrom!=null">#{pojo.comeFrom},</if>
            <if test="pojo.tradePwd!=null">#{pojo.tradePwd},</if>
            <if test="pojo.id!=null">#{pojo.id},</if>
            <if test="pojo.updTime!=null">#{pojo.updTime},</if>
            <if test="pojo.crtTime!=null">#{pojo.crtTime},</if>
        </trim>
    </insert>

    <!--auto generated Code-->
    <insert id="insertList">
        INSERT INTO user (
        <include refid="all_column"/>
        )VALUES
        <foreach collection="pojos" item="pojo" index="index" separator=",">
            (
            #{pojo.name},
            #{pojo.loginName},
            #{pojo.loginPwd},
            #{pojo.comeFrom},
            #{pojo.tradePwd},
            #{pojo.id},
            #{pojo.updTime},
            #{pojo.crtTime}
            )
        </foreach>
    </insert>

    <!--auto generated Code-->
    <update id="update">
        UPDATE user
        <set>
            <if test="pojo.name != null"> name = #{pojo.name}, </if>
            <if test="pojo.loginName != null"> login_name = #{pojo.loginName}, </if>
            <if test="pojo.loginPwd != null"> login_pwd = #{pojo.loginPwd}, </if>
            <if test="pojo.comeFrom != null"> come_from = #{pojo.comeFrom}, </if>
            <if test="pojo.tradePwd != null"> trade_pwd = #{pojo.tradePwd}, </if>
            <if test="pojo.id != null"> id = #{pojo.id}, </if>
            <if test="pojo.updTime != null"> upd_time = #{pojo.updTime}, </if>
            <if test="pojo.crtTime != null"> crt_time = #{pojo.crtTime} </if>
        </set>
        WHERE id = #{pojo.id}
    </update>

    <!--根据用户名获取用户信息-->
    <select id="findByUserName" parameterType="java.lang.String" resultMap="AllColumnMap" >
        SELECT
            <include refid="all_column" />
        FROM  user
        WHERE login_name = #{userName}
    </select>
    <!--根据用户ID获取用户信息-->
    <select id="findById" parameterType="java.lang.Long" resultMap="AllColumnMap" >
        SELECT
            <include refid="all_column" />
        FROM user
        WHERE id = #{id}
    </select>
    
    <select id="findAll" resultMap="AllColumnMap" >
        SELECT
            id, name, code, login_name, login_pwd, come_from, trade_pwd, user_level_id, user_info_id, payment_id, upd_time, crt_time
        FROM user u
        <where>
            <if test="id != null" >and id = #{id}</if>
            <if test="name != null" >and name like '%#{name}%'</if>
            <if test="comeFrom != null" >and come_from = #{comeFrom}</if>
        </where>
    </select>

    <delete id="delete" >
        DELETE FROM user WHERE id = #{id}
    </delete>
</mapper>

